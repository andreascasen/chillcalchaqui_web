---
import Layout from '../layouts/Layout.astro';

---

<Layout >
	<section class="hero">
		<div class="content">
			<h1>Chill Calchaqui</h1>
		</div>
	</section>
</Layout>

<style >
	.hero {
		background-image: url("img/bg_main.JPG");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		background-attachment: fixed;

		position: relative;

		min-height: 100dvh;
		max-width: 100%;

		padding: 2rem;

		&::after {
			content: '';
			position: absolute;
			inset: 0;

			background-image: radial-gradient(hsla(var(--purple), .7), hsla(var(--black), .9));
		}
	}
</style>

