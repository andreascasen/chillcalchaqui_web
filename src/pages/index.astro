---
import HeroSocials from '../components/UI/HeroSocials.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout >
	<section class="hero">
		<div class="content">
			<h1>Chill Calchaqui</h1>
			<HeroSocials />
		</div>
	</section>
</Layout>

<style >
	.hero {
		background-image: url("img/bg_2.JPG");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		background-attachment: fixed;

		isolation: isolate;

		position: relative;

		min-height: 100dvh;
		max-width: 100%;

		padding: 2rem;

		&::after {
			content: '';
			position: absolute;
			inset: 0;

			background-image: radial-gradient(hsla(var(--blueDark), .4), hsla(var(--black), 1));

			z-index: -1;
		}
	}

	.content {
		max-width: 900px;
		margin-inline: auto;
	}
</style>

